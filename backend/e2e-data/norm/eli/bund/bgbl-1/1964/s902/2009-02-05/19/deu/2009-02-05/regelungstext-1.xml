        <akn:body GUID="33333333-0000-4444-5555-666666666666" eId="hauptteil-1">
            <akn:article GUID="44444444-0000-4555-6666-777777777777" eId="hauptteil-1_art-1" period="#meta-1_geltzeiten-1_geltungszeitgr-29" refersTo="stammform">
                <akn:num GUID="55555555-0000-4666-7777-888888888888" eId="hauptteil-1_art-1_bezeichnung-1">§ 1</akn:num>
                <akn:heading GUID="66666666-0000-4777-8888-999999999999" eId="hauptteil-1_art-1_überschrift-1">Erlaubnis zur Nutzung öffentlicher Einrichtungen für Testzwecke</akn:heading>
                <akn:paragraph GUID="77777777-0000-4888-9999-aaaaaaaaaaaa" eId="hauptteil-1_art-1_abs-1">
                    <akn:num GUID="88888888-0000-4999-aaaa-bbbbbbbbbbbb" eId="hauptteil-1_art-1_abs-1_bezeichnung-1">(1)</akn:num>
                    <akn:content GUID="99999999-0000-4aaa-bbbb-cccccccccccc" eId="hauptteil-1_art-1_abs-1_inhalt-1">
                        <akn:p GUID="aaaaaaaa-0000-4bbb-cccc-dddddddddddd" eId="hauptteil-1_art-1_abs-1_inhalt-1_text-1">Für die Testphase ist eine simulierte Freistellung mit fortlaufender Bezahlung zu gewähren.</akn:p>
                        <akn:blockList GUID="bbbbbbbb-0000-4ccc-dddd-eeeeeeeeeeee" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1">
                            <akn:item GUID="cccccccc-0000-4ddd-eeee-ffffffffffff" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-1">
                                <akn:num GUID="dddddddd-0000-4eee-ffff-111111111112" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-1_bezeichnung-1">1.</akn:num>
                                <akn:p GUID="eeeeeeee-0000-4fff-1111-222222222222" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-1_text-1">für die Durchführung von Testwahlen in der simulierten Umgebung,</akn:p>
                            </akn:item>
                            <akn:item GUID="11111112-0000-4222-3333-444444444445" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-2">
                                <akn:num GUID="22222223-0000-4333-4444-555555555556" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-2_bezeichnung-1">2.</akn:num>
                                <akn:p GUID="33333334-0000-4444-5555-666666666667" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-2_text-1">zur Wahrnehmung von Testterminen in Musterbehörden,</akn:p>
                            </akn:item>
                            <akn:item GUID="44444445-0000-4555-6666-777777777778" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-3">
                                <akn:num GUID="55555556-0000-4666-7777-888888888889" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-3_bezeichnung-1">3.</akn:num>
                                <akn:p GUID="66666667-0000-4777-8888-999999999990" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-3_text-1">zur Teilnahme an freiwilligen Testprojekten, sofern zur Übernahme keine Verpflichtung besteht.<akn:marker GUID="77777778-0000-4888-9999-aaaaaaaaaaab" eId="hauptteil-1_art-1_abs-1_inhalt-1_liste-1_listenelem-3_text-1_marker-1" refersTo="satzende"/></akn:p>
                            </akn:item>
                        </akn:blockList>
                    </akn:content>
                </akn:paragraph>
                <akn:paragraph GUID="77777778-0000-4888-9999-aaaaaaaaaaab" eId="hauptteil-1_art-1_abs-2">
                    <akn:num GUID="88888889-0000-4999-aaaa-bbbbbbbbbbbc" eId="hauptteil-1_art-1_abs-2_bezeichnung-1">(2)</akn:num>
                    <akn:content GUID="99999990-0000-4aaa-bbbb-cccccccccccd" eId="hauptteil-1_art-1_abs-2_inhalt-1">
                        <akn:p GUID="aaaaaaaa-0000-4bbb-cccc-ddddddddddee" eId="hauptteil-1_art-1_abs-2_inhalt-1_text-1">Beruht eine freiwillige Tätigkeit in der Testumgebung auf gesetzlichen Vorgaben, kann der notwendige Testurlaub unter Fortzahlung der Bezüge gewährt werden, sofern dienstliche Belange dies zulassen.<akn:marker GUID="bbbbbbbb-0000-4ccc-dddd-eeeeeeeeeeef" eId="hauptteil-1_art-1_abs-2_inhalt-1_text-1_marker-1" refersTo="satzende"/></akn:p>
                    </akn:content>
                </akn:paragraph>
            </akn:article>
            <akn:article GUID="cccccccc-0000-4ddd-eeee-fffffffffff0" eId="hauptteil-1_art-2" period="#meta-1_geltzeiten-1_geltungszeitgr-29" refersTo="stammform">
                <akn:num GUID="dddddddd-0000-4eee-ffff-111111111113" eId="hauptteil-1_art-2_bezeichnung-1">§ 2</akn:num>
                <akn:heading GUID="eeeeeeee-0000-4fff-1111-222222222223" eId="hauptteil-1_art-2_überschrift-1">Regelung entfällt in der Testversion</akn:heading>
                <akn:paragraph GUID="ffffffff-0000-4111-2222-333333333335" eId="hauptteil-1_art-2_abs-1">
                    <akn:num GUID="11111113-0000-4222-3333-444444444446" eId="hauptteil-1_art-2_abs-1_bezeichnung-1"/>
                    <akn:content GUID="22222224-0000-4333-4444-555555555557" eId="hauptteil-1_art-2_abs-1_inhalt-1">
                        <akn:p GUID="33333335-0000-4444-5555-666666666668" eId="hauptteil-1_art-2_abs-1_inhalt-1_text-1">--</akn:p>
                    </akn:content>
                </akn:paragraph>
            </akn:article>
            <akn:article GUID="44444446-0000-4555-6666-777777777779" eId="hauptteil-1_art-3" period="#meta-1_geltzeiten-1_geltungszeitgr-33" refersTo="stammform">
                <akn:num GUID="55555557-0000-4666-7777-888888888890" eId="hauptteil-1_art-3_bezeichnung-1">§ 3</akn:num>
                <akn:heading GUID="66666668-0000-4777-8888-999999999991" eId="hauptteil-1_art-3_überschrift-1">Testregelung für freiwillige Dienste im öffentlichen Sektor</akn:heading>
                <akn:paragraph GUID="77777779-0000-4888-9999-aaaaaaaaaaac" eId="hauptteil-1_art-3_abs-1">
                    <akn:num GUID="88888880-0000-4999-aaaa-bbbbbbbbbbbd" eId="hauptteil-1_art-3_abs-1_bezeichnung-1"/>
                    <akn:content GUID="99999991-0000-4aaa-bbbb-ccccccccccce" eId="hauptteil-1_art-3_abs-1_inhalt-1">
                        <akn:p GUID="aaaaaaaa-0000-4bbb-cccc-dddddddddddd" eId="hauptteil-1_art-3_abs-1_inhalt-1_text-1">Zur Ableistung eines freiwilligen Testjahres oder eines ökologischen Testprogramms im Rahmen der simulierten Testgesetzgebung können Testkraftkräfte vom Dienst freigestellt werden.</akn:p>
                    </akn:content>
                </akn:paragraph>
            </akn:article>
