    "german_analyzer_template"
  ],
  "priority": 500,
  "template": {
    "mappings": {
      "properties": {
        "document_number": {
          "type": "text",
          "analyzer": "custom_german_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "normalizer": "normalized_keyword"
            }
          }
        },
        "keywords": {
          "type": "text",
          "analyzer": "custom_german_analyzer",
          "fields": {
            "keyword": {
