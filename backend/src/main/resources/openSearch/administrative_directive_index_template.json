              "normalizer": "normalized_keyword"
            }
          }
        },
        "recording_date": {
          "type": "date"
        },
        "caselaw_references": {
          "type": "text",
          "analyzer": "custom_german_analyzer"
        },
        "content": {
          "type": "text",
          "analyzer": "custom_german_analyzer"
        },
        "document_category": {
          "type": "text",
          "analyzer": "custom_german_analyzer"
        },
        "document_type": {
          "type": "text",
          "analyzer": "custom_german_analyzer"
        },
        "entry_into_effect_date": {
          "type": "date"
        },
        "fields_of_law": {
          "type": "text",
          "analyzer": "custom_german_analyzer"
        },
        "fundstelle_references": {
          "type": "text",
          "analyzer": "custom_german_analyzer"
        },
        "indexed_at": {
          "type": "date"
        },
        "long_title": {
          "type": "text",
