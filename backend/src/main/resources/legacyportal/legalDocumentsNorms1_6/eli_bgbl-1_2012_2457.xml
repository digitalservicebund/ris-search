      <akn:article GUID="e12e63f7-3306-4f99-af9e-bdc1c32be6f9" eId="para-1" refersTo="einzelvorschrift-stammform">
        <akn:num GUID="674aa88a-88fb-4177-a616-8437a1d8e695" eId="para-1_bezeichnung-1">
